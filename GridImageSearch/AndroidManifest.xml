<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yahoo.gridimagesearch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yahoo.gridimagesearch.ImageSearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yahoo.gridimagesearch.FullImageViewActivity"
            android:label="@string/title_activity_full_image_view" >
        </activity>
        <activity
            android:name="com.yahoo.gridimagesearch.AdvancedOptionsActivity"
            android:label="@string/title_activity_advanced_options" >
        </activity>
    </application>

</manifest>
