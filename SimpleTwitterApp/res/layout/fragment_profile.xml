<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:maxHeight="@dimen/image_max_height"
        android:maxWidth="@dimen/image_max_width"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvUserDesription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUsername"
        android:layout_below="@+id/tvUsername"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="user description" />

    <TextView
        android:id="@+id/tvFollowingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvFollowerCount"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvFollowerCount"
        android:text="# Following" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivUserProfile"
        android:layout_toRightOf="@+id/ivUserProfile"
        android:layout_marginLeft="10dp"
        android:text="Username" />

    <TextView
        android:id="@+id/tvFollowerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivUserProfile"
        android:layout_below="@+id/ivUserProfile"
        android:layout_marginTop="10dp"
        android:text="# Followers" />

</RelativeLayout>
